<button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#exampleModalLong">
  Добавить в меню
</button>

<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 id="exampleModalLongTitle">В меню</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_for @menu  do |f| %>
        <div class="modal-body">
          <div class="form-group">
             <%= f.hidden_field :recipe_id, value: @recipe.id %>
          </div>
          <div class="form-group">
            <%= f.label :date_meal, 'Дата потребления блюда' %>
            <%= f.date_field :date_meal, as: :date, value: f.object.try(:strftime,"%m/%d/%Y"), class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :weight, 'Количество грамм, которое планируете съесть' %>
            <%= f.number_field :weight, class: 'form-control', min: 0, value: 100 %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
          <%= f.submit 'Добавить в меню', class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>